@using Microsoft.AspNetCore.Identity

@inject SignInManager<Utilisateur> SignInManager
@inject UserManager<Utilisateur> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="fas fa-user" asp-area="Identity" asp-page="/Account/Manage/Index" title="Profil"></a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" title="Déconnexion" class=" btn btn-link text-dark"><i class="fas fa-sign-out-alt"></i></button>
            </form>
        </li>
    }
    else
    {

        <li class="nav-item">
            <a class="fas fa-sign-in-alt" id="login" title="Connexion" asp-area="Identity" asp-page="/Account/Login"></a>
        </li>
        <li class="nav-item">
            <a class="fa fa-user-plus" aria-hidden="true" id="register" title="Créer compte" asp-area="Identity" asp-page="/Account/Register"></a>
        </li>
    }
</ul>
